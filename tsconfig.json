{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./build/",
        "sourceRoot": "./src",
        "sourceMap": true,
        "pretty":true,
        "emitDecoratorMetadata":true,
        "experimentalDecorators":true, 
        "forceConsistentCasingInFileNames":true
        
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.js"
    ]
}